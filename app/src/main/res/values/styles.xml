<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_todolist</item>
        <item name="colorPrimary">@color/forange</item>
        <item name="colorPrimaryDark">@color/fred</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/forange</item>
        <item name="colorPrimaryDark">@color/fred</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

</resources>
